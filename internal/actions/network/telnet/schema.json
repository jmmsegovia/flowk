{
  "definitions": {
    "task": {
      "properties": {
        "action": {
          "enum": ["TELNET"]
        },
        "host": {
          "type": "string",
          "minLength": 1
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "timeoutSeconds": {
          "type": "number",
          "minimum": 0
        },
        "readTimeoutSeconds": {
          "type": "number",
          "minimum": 0
        },
        "lineEnding": {
          "type": "string",
          "enum": ["CRLF", "LF", "CR"]
        },
        "steps": {
          "type": "array",
          "minItems": 1
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "action": {
                "const": "TELNET"
              }
            },
            "required": ["action"]
          },
          "then": {
            "properties": {
              "steps": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "$ref": "#/definitions/telnetStep"
                }
              }
            },
            "required": [
              "id",
              "action",
              "host",
              "steps"
            ]
          }
        }
      ]
    },
    "telnetStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "connect": {
          "type": "object",
          "additionalProperties": false
        },
        "send": {
          "$ref": "#/definitions/telnetSend"
        },
        "expect": {
          "$ref": "#/definitions/telnetExpect"
        },
        "close": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "oneOf": [
        { "required": ["connect"] },
        { "required": ["send"] },
        { "required": ["expect"] },
        { "required": ["close"] }
      ]
    },
    "telnetSend": {
      "type": "object",
      "additionalProperties": false,
      "required": ["data"],
      "properties": {
        "data": {
          "type": "string"
        },
        "appendLineEnding": {
          "type": "boolean"
        },
        "mask": {
          "type": "boolean"
        }
      }
    },
    "telnetExpect": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "type": "string",
          "minLength": 1
        },
        "timeoutSeconds": {
          "type": "number",
          "minimum": 0
        },
        "capture": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
