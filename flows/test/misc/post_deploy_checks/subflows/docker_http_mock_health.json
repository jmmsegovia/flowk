{
  "id": "docker_http_mock_health",
  "description": "Run a local HTTP echo server that returns a simple health payload.",
  "tasks": [
    {
      "id": "docker.pull.http_echo.health",
      "action": "DOCKER",
      "operation": "IMAGE_PULL",
      "image": "hashicorp/http-echo:0.2.3"
    },
    {
      "id": "docker.run.health_mock",
      "action": "DOCKER",
      "operation": "CONTAINER_RUN",
      "image": "hashicorp/http-echo:0.2.3",
      "name": "flowk-health-mock",
      "detach": true,
      "remove_existing": true,
      "ports": [
        "8094:8094"
      ],
      "command": [
        "-listen",
        ":8094",
        "-text",
        "{\"status\":\"ok\"}"
      ]
    },
    {
      "id": "sleep.health_mock",
      "description": "Wait for the mock server to accept requests.",
      "action": "SLEEP",
      "seconds": 1
    }
  ]
}
